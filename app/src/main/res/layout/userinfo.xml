<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ảnh bìa -->
    <ImageView
        android:id="@+id/coverPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cover_photo" />

    <!-- Vùng hiển thị thông tin người dùng -->
    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coverPhoto"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profile_image"
            android:background="@drawable/circle_background" />

        <!-- Tên người dùng -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tên người dùng"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Các mục -->
        <Button
            android:id="@+id/viewUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết người dùng" />

        <Button
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu" />

        <Button
            android:id="@+id/createNewPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo bài viết mới" />

        <Button
            android:id="@+id/managePosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý bài viết" />

        <Button
            android:id="@+id/favoritePosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài viết yêu thích" />

        <Button
            android:id="@+id/savedPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài viết đã lưu" />

       
    </LinearLayout>

</RelativeLayout>
